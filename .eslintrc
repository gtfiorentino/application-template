{
  "extends"     : "airbnb",
  "env"         : {
    "browser": true,
    "mocha"  : true,
    "node"   : true
  },
  "plugins"     : [
    "react"
  ],
  "ecmaFeatures": {
    "jsx"                         : true,
    "restParams"                  : true,
    "experimentalObjectRestSpread": true
  },
  "rules"       : {
    "react/jsx-uses-react"    : 2,
    "react/jsx-uses-vars"     : 2,
    "react/react-in-jsx-scope": 2,
    "react/no-multi-comp"     : 0,
    "react/sort-comp"         : 1,
    "react/jsx-quotes"        : 0,
    "comma-dangle"            : 0,
    "id-length"               : 0,
    "new-cap"                 : 0,
    "eol-last"                : 0,
    "jsx-quotes"              : 0,
    "consistent-return"       : 0,
    "key-spacing"             : 0,
    "no-multi-spaces"         : 0,
    "indent"                  : [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsx-indent-props"        : 0,
    "react/jsx-indent-props"  : 0
  }
}